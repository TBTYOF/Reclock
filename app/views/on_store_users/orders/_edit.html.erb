<div class="col-sm-3 col-xs-3" style="margin-top: 20px;">
	<%= link_to "戻る",on_store_users_on_store_user_order_path(current_on_store_user, order), remote: true, class: "btn btn-default" %>
</div>
<div class="row"></div>
<%= form_with model: order, url: on_store_users_on_store_user_order_path(current_on_store_user, order) do |f| %>
	<div class="row">
		<div class="col-sm-3 col-xs-3"><%= f.label :variety, "品種" %></div>
		<div class="col-sm-9 col-xs-9"><%= f.select :variety, Order.varieties.keys %></div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-xs-3"><%= f.label :maker, "メーカー" %></div>
		<div class="col-sm-9 col-xs-9"><%= f.text_field :maker, class: "col-sm-11 col-xs-11", placeholder: 'メーカー名:', autocomplete: "maker" %></div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-xs-3"><%= f.label :model, "型番" %></div>
		<div class="col-sm-9 col-xs-9"><%= f.text_field :model, class: "col-sm-11 col-xs-11", placeholder: '型番:', autocomplete: "model" %></div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-xs-3"><%= f.label :symptom, "症状" %></div>
		<div class="col-sm-9 col-xs-9"><%= f.text_area :symptom, rows:10, class: "col-sm-12 col-xs-12", placeholder: '症状を入力して下さい:', style: "resize: none; " %></div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-xs-3"><%= f.label :order_images_images, "画像追加", class: "font-size3" %></div>
		<div class="col-sm-9 col-xs-9"><%= f.attachment_field :order_images_images, multiple: true, class: "font-size2" %></div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-xs-3"></div>
		<div class="col-sm-9 col-xs-9"><%= f.submit "確定", class: "btn btn-info font-size3" %></div>
	</div>
	<% if order.order_images.present? %>
		<div class="row">
			<h3>画像</h3>
			<div class="">
				<% order.order_images.each_with_index do |image, index| %>
					<% index += 1 %>
					<h4>画像（<%= index %>）</h4><%= link_to "削除", on_store_users_on_store_user_order_order_image_path(current_on_store_user, order, image),  method: :delete, remote: true, data: { confirm: "削除します" }, class: "btn btn-danger" %>
					<div style="padding-left: 40px;"><%= attachment_image_tag image, :image, :fill, 600, 400, format: 'jpeg' %></div>
				<% end %>
			</div>
		</div>
	<% end %>
<% end %>
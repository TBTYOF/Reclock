<div class="nested-fields well well-compact">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= link_to_remove_association "remove middle_category", f %>
  </div>

  <div class="minor_categories">
    <%= f.fields_for :minor_categories do |minor_category| %>
      <%= render 'minor_category_fields', f: minor_category %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "add minor_category", f, :minor_categories %>
    </div>
  </div>
</div>
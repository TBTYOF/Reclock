<div class="container">
  <div class="col-sm-6 col-xs-6 col-sm-offset-2 col-xs-offset-2" style="margin-bottom: 50px;">
    <h2 class="font-size4" style="margin-bottom: 30px;">登録情報変更</h2>
    <%= form_for(@on_store_user, url: on_store_users_on_store_user_path) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>
      <div class="col-sm-12 col-xs-12">

        <div class="row">
          <h3>登録者情報</h3>
          <div class="row">
            <div class="field font-size2 col-sm-6 col-xs-6" style="margin-bottom: 15px">
              <%= f.label :owner_name, "代表者名" %><br />
              <%= f.text_field :owner_name, autofocus: true, class: "col-sm-11 col-xs-11", placeholder: '氏名:', autocomplete: "owner_name" %>
            </div>
            <div class="field font-size2 col-sm-6 col-xs-6">
              <%= f.label :owner_name_kana, "代表者名(かな)" %><br />
              <%= f.text_field :owner_name_kana, class: "col-sm-11 col-xs-11", placeholder: 'ふりがな:', autocomplete: "owner_name_kana" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 10px">
              <%= f.label :telephone_number, "電話番号" %><br />
              <%= f.telephone_field :telephone_number, placeholder: '電話番号:', class: "col-sm-10 col-xs-10", autocomplete: "telephone_number" %>
            </div>
            <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 15px">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, placeholder: 'メールアドレス:', class: "col-sm-10 col-xs-10", autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="row">
          <h3>店舗情報</h3>
          <div class="row">
            <div class="field font-size2 col-sm-11 col-xs-11" style="margin-bottom: 10px">
              <%= f.label :shop_name, "店舗名" %><br />
              <%= f.text_field :shop_name, class: "col-sm-11 col-xs-11", placeholder: '店舗名:', autocomplete: "shop_name" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 10px">
              <%= f.label :business_hours, "営業時間" %><br />
              <%= f.text_field :business_hours, placeholder: '営業時間:', autocomplete: "business_hours", class: "col-sm-12 col-xs-12" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 15px">
              <%= f.label :holiday, "定休日" %><br />
              <%= f.text_field :holiday, placeholder: '定休日:', autocomplete: "holiday", class: "col-sm-12 col-xs-12" %>
            </div>
          </div>

          <div class="row">
            <div class="field font-size2 col-sm-6 col-xs-6" style="margin-bottom: 10px">
              <%= f.label :postcode, "〒 郵便番号" %><br />
              <%= f.telephone_field :postcode, placeholder: 'ハイフン無し:', autocomplete: "postcode" %>
            </div>
          </div>
          <div class="row address-form">
            <div class="field font-size2 col-sm-12 col-xs-12" style="margin-bottom: 15px">
              <%= f.label :address, "続きを入力してください" %><br />(「建物名」「号室」などもご入力ください)
              <%= f.text_area :address, rows:2, class: "col-sm-12 col-xs-12", style: "resize: none;" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 10px">
              <%= f.label :closest_station, "最寄駅" %><br />
              <%= f.text_field :closest_station, placeholder: '最寄駅:', autocomplete: "closest_station", class: "col-sm-12 col-xs-12" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 15px">
              <%= f.label :parking, "駐車場" %><br />
              <%= f.text_field :parking, placeholder: '駐車場:', autocomplete: "parking", class: "col-sm-12 col-xs-12" %>
            </div>
          </div>
        </div>

        <div class="row">
          <h3>店舗詳細ページ情報</h3>
          <div class="row">
            <div class="field font-size2 col-sm-12 col-xs-12" style="margin-bottom: 10px">
              <%= f.label :greeting, "ご挨拶" %><br />
              <%= f.text_area :greeting, rows:8, style: "resize: none;", class: "col-sm-12 col-xs-12", placeholder: '店舗詳細ページに載るご挨拶:', autocomplete: "greeting" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size3 col-sm-9 col-xs-9" style="margin-bottom: 30px">
              <%= f.label :image, "店舗一覧ページ：店舗画像", class: "font-size3" %><br />
              全店舗一覧ページに載せる画像を選択してください（１枚）
              <%= f.attachment_field :image, class: "font-size2" %>
            </div>
          </div>
          <div class="row">
            <div class="field font-size3 col-sm-9 col-xs-9" style="margin-bottom: 30px">
              <%= f.label :on_store_user_images_images, "店舗詳細ページ：スライドショーの画像", class: "font-size3" %><br />
              店舗詳細ページのスライドショーに載せる画像を選択してください（複数枚選択出来ます）
              <%= f.attachment_field :on_store_user_images_images, multiple: true, class: "font-size2" %>
            </div>
          </div>
        </div>

        <div class="row">
          <h3>サービス概要編集</h3>
          <div id="major_categories">
            <%= f.fields_for :major_categories do |major_category| %>
              <%= render 'major_category_fields', f: major_category %>
            <% end %>

            <div id="links">
              <%= link_to_add_association 'add major_categories',f, :major_categories %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="actions col-sm-9 col-xs-9" style="margin-bottom: 20px">
            <%= f.submit "変更", class: "btn btn-info font-size2" %>
          </div>
        </div>
      </div>
    <% end %>

 </div>
</div>
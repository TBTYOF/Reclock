<div class="container">
  <div class="col-sm-7 col-xs-7 col-sm-offset-3 col-xs-offset-3 " style="margin-bottom: 50px;">
    <h2 class="font-size4" style="margin-bottom: 30px;">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field font-size3" style="margin-bottom: 10px">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field font-size3" style="margin-bottom: 10px">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field font-size2" style="margin-bottom: 10px">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインしたままにする" %>
        </div>
      <% end %>

      <div class="actions font-size3" style="margin-bottom: 20px">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "/on_store_users/shared/links" %>
  </div>
</div>


<table class="table font-size2">
	<thead>
		<tr>
			<th>
				<% if user_signed_in? %>
					問合せ先
				<% else %>
					問合せ元
				<% end %>
			</th>
			<th>件名</th>
			<th><%= sort_link(@q, :order_id, '注文ID') %></th>
			<th><%= sort_link(@q, :created_at, '最終投稿日') %></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% inquiries.each do |inquiry| %>
			<tr>
				<% if user_signed_in? %>
					<td style="padding-top: 15px; padding-bottom: 15px;">
						<%= link_to inquiry.on_store_user.shop_name, users_on_store_users_show_path(inquiry.on_store_user) %>
					</td>
					<td style="padding-top: 15px; padding-bottom: 15px;">
						<%= inquiry.title %>
					</td>
					<td style="padding-top: 15px; padding-bottom: 15px;">
						<% if inquiry.order_id == nil %>
							注文前
						<% else %>
							<%= link_to inquiry.order_id, users_user_order_path(user, inquiry.order_id) %>
						<% end %>
					</td>
				<% else %>
					<td style="padding-top: 15px; padding-bottom: 15px;">
						<%= inquiry.user.name %> 様
					</td>
					<td style="padding-top: 15px; padding-bottom: 15px;">
						<%= inquiry.title %>
					</td>
					<td style="padding-top: 15px; padding-bottom: 15px;">
						<% if inquiry.order_id == nil %>
							注文前
						<% else %>
							<%= link_to inquiry.order_id, on_store_users_on_store_user_order_path(user, inquiry.order_id) %>
						<% end %>
					</td>
				<% end %>
				<td style="padding-top: 15px; padding-bottom: 15px;">
					<% if inquiry.replies.count == 0 %>
						<%= inquiry.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[inquiry.created_at.wday]}) %H:%M") %>
					<% else %>
						<%= inquiry.replies.last.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[inquiry.replies.last.created_at.wday]}) %H:%M") %>
					<% end %>
				</td>
				<td style="padding-top: 15px; padding-bottom: 15px;">
					<% if user_signed_in? %>
						<% if inquiry.order_id == nil %>
							<%= link_to "内容を見る", users_user_inquiry_path(user, inquiry, shop_id: inquiry.on_store_user.id), remote: true, class: "btn btn-default" %>
						<% else %>
							<%= link_to "内容を見る", users_user_inquiry_path(user, inquiry, shop_id: inquiry.on_store_user.id, order_id: inquiry.order.id), remote: true, class: "btn btn-default" %>
						<% end %>
					<% else %>
						<% if inquiry.order_id == nil %>
							<%= link_to "内容を見る", on_store_users_on_store_user_inquiry_path(user, inquiry), remote: true, class: "btn btn-default" %>
						<% else %>
							<%= link_to "内容を見る", on_store_users_on_store_user_order_inquiry_path(user, inquiry.order.id,inquiry), remote: true, class: "btn btn-default" %>
						<% end %>
					<% end %>
				</td>
				<td style="color: red; padding-top: 15px; padding-bottom: 15px;">
					<% if user_signed_in? %>
						<% if inquiry.user_read == false %>
							<strong>未読</strong>
						<% elsif inquiry.on_store_user_read == false %>
							<strong>修理店未読</strong>
						<% else %>
						<% end %>
					<% else %>
						<% if inquiry.on_store_user_read == false %>
							<strong>未読</strong>
						<% elsif inquiry.user_read == false %>
							<strong>お客様未読</strong>
						<% else %>
						<% end %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= paginate inquiries, class: "paginate" %>
<% inquiry.replies.each_with_index do |reply,index| %>
	<% index += 1 %>
	<table class="table">
		<tbody>
			<tr>
				<td><%= index %>.</td>
				<td>
					<!-- is_writerがfalseでユーザ投稿 -->
					<% if reply.is_writer == false %>
						あなたの返信
					<% else %>
						修理店からの返信
					<% end %>
				</td>
				<td>投稿日時： <%= reply.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[reply.created_at.wday]}) %H:%M") %></td>
			</tr>
			<tr>
				<td>返信文：</td>
			</tr>
			<tr>
				<td colspan="3">
					<%= reply.body %>
				</td>
			</tr>
		</tbody>
	</table>
<% end %>
	<div class="col-sm-12 col-xs-12" id="replies">
		<% if defined? order %>
			<%= link_to "返信", reply_new_url, remote: true, class: "btn btn-success" %>
		<% else %>
			<%= link_to "返信", reply_new_url, remote: true, class: "btn btn-success" %>
		<% end %>
	</div>
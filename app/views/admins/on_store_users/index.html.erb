<div class="container-fluid margin-top">
	<div class="col-md-12 col-xs-12">
		<div style="margin-bottom: 50px;" class="font-size2">
			<%= search_form_for(@q,  url: admins_on_store_users_path, class: "form-inline" ) do |f| %>
			<div class="form-group col-sm-4 col-xs-4">
				<%= f.label :shop_name_cont, '店舗名' %>
				<%= f.search_field :shop_name_cont %>
			</div>
			<div class="form-group col-sm-5 col-xs-5">
				<%= f.label :owner_name_cont, '代表者名' %>
				<%= f.search_field :owner_name_cont %>
			</div>
			<div class="form-group col-sm-4 col-xs-4">
				<%= f.label :telephone_number_cont, '電話番号' %>
				<%= f.search_field :telephone_number_cont %>
			</div>
			<div class="form-group col-sm-6 col-xs-6">
				<%= f.label :email_cont, 'メールアドレス' %>
				<%= f.search_field :email_cont %>
			</div>
				<%= f.submit "検索", name: "serch", class: "btn btn-default" %>
				<%= link_to "リセット", admins_on_store_users_path, class: "btn btn-default" %>
			<% end %>
		</div>
		<table class="table">
			<thead class="font-size3">
				<tr>
					<th><%= sort_link(@q, :id, '出店者ID') %></th>
					<th>店舗名</th>
					<th>代表者名</th>
					<th>電話番号</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody class="font-size2">
				<% @on_store_users.each do |on_store_user| %>
					<tr>
						<td><%= link_to on_store_user.id, admins_on_store_user_path(on_store_user) %></td>
						<td><%= on_store_user.shop_name %></td>
						<td><%= on_store_user.owner_name %></td>
						<td><%= telephone_ber(on_store_user.telephone_number) %></td>
						<td><%= on_store_user.email %></td>
						<td><%= on_store_user.is_quit %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= paginate @on_store_users, class: "paginate" %>
	</div>
</div>
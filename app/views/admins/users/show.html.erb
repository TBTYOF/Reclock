<div class="container" style="min-height: 500px; margin-bottom: 150px;">

	<div class="col-md-5 col-xs-8" style="margin: 50px 0 50px 0;">
		<h2 class="font-size4" style="padding-left: 10px;">ユーザ登録情報</h2>
	</div>

	<div class="row">
		<div class="col-sm-12 col-xs-12">

			<div class="font-size3 col-sm-12 col-xs-12">
				<div class="row">
					<div class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 teble-margin">
						<strong>氏名(かな)</strong>
					</div>
					<div class="col-sm-8 col-xs-8 teble-margin">
						<%= @user.name %> (<%= @user.name_kana %>)
					</div>
				</div>

				<div class="row border-top teble-margin">
					<div class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 teble-margin">
						<strong>住 　所</strong>
					</div>
					<div class="col-sm-8 col-xs-8 teble-margin">
						〒 <%= @user.postcode.insert(3, '-') %>
					</div>
					<div class="col-sm-8 col-xs-8 col-sm-offset-4 col-xs-offset-4 teble-margin">
						<%= text_br(@user.address) %>
					</div>
				</div>

				<div class="row border-top teble-margin">
					<div class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 teble-margin">
						<strong>電話番号</strong>
					</div>
					<div class="col-sm-8 col-xs-8 teble-margin">
						<%= telephone_ber(@user.telephone_number) %>
					</div>
				</div>

				<div class="row border-top teble-margin">
					<div class="col-md-3 col-xs-4 col-md-offset-1 teble-margin">
						<strong>メールアドレス</strong>
					</div>
					<div class="col-sm-8 col-xs-8 teble-margin">
						<%= @user.email %>
					</div>
				</div>

				<% if card_by?(@user) %>
					<div class="row border-top teble-margin">
						<div class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 teble-margin">
							<strong>カード情報</strong>
						</div>
						<div class="col-sm-8 col-xs-8 teble-margin">
							<%= @default_card_information.brand %>　**** **** **** <%= @default_card_information.last4 %>
						</div>
						<div class="col-sm-8 col-xs-8 col-sm-offset-4 col-xs-offset-4 teble-margin">
							有効期限： <%= @default_card_information.exp_month %>/<%= @default_card_information.exp_year %>
						</div>
					</div>
	      <% end %>

	      <div class="row border-top teble-margin">
					<div class="col-md-3 col-xs-4 col-md-offset-1 teble-margin">
						<strong>ステータス</strong>
					</div>
					<div class="col-md-4 col-xs-4 teble-margin">
						<%= @user.is_quit %>
					</div>
					<div class="col-md-4 col-xs-4 teble-margin">
						<% if @user.is_quit == "利用中" %>
							<%= link_to "強制退会", admins_user_path(@user), method: :delete, class: "btn btn-danger font-size3" %>
						<% else %>
							<%= link_to "利用再会", admins_user_path(@user), method: :patch, class: "btn btn-info font-size3" %>
						<% end %>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
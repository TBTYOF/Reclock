<div class="container">
	<h2 class="font-size4">マイページ</h2>
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">

			<ul id="tab-menu" class="clearfix">
        <li><a href="#tab1" class="active">登録情報</a></li>
        <li><a href="#tab2" class="">注文一覧</a></li>
        <li><a href="#tab3" class="">問合せ一覧</a></li>
      </ul>

			<div id="tab1" class="tab">
				<ul class="list-group">
					<li class="list-group-item">名前</li>
					<li class="list-group-item"><%= current_user.name %></li>
					<li class="list-group-item">住所</li>
					<li class="list-group-item"><%= current_user.postcode %></li>
					<li class="list-group-item"><%= current_user.address %></li>
					<li class="list-group-item">電話番号</li>
					<li class="list-group-item"><%= current_user.telephone_number %></li>
					<li class="list-group-item">メールアドレス</li>
					<li class="list-group-item"><%= current_user.email %></li>
					<li class="list-group-item"><%= link_to "登録情報を編集する", edit_users_user_path(current_user), class: "btn btn-info" %></li>
				</ul>
			</div>

			<div id="tab2" class="tab">
				<table class="table">
					<thead>
						<tr>
							<th>注文一覧</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>data</td>
						</tr>
					</tbody>
				</table>
			</div>

			<div id="tab3" class="tab">
				<table class="table">
					<thead>
						<tr>
							<th>問合せ一覧</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>data</td>
						</tr>
					</tbody>
				</table>
			</div>

		</div>
	</div>
</div>

<script>
	$('.tab[id != "tab1"]').hide();

	$('#tab-menu a').on('click', function() {
  	$(".tab").hide();
  	$("#tab-menu .active").removeClass("active");
  	$(this).addClass("active");
  	$($(this).attr("href")).show();
  	return false;
	});
</script>

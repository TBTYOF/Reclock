<div class="container" style="margin-top: 100px; margin-bottom: 150px; ">
  <div class="col-md-8 col-xs-10 col-md-offset-2 col-xs-offset-1 body-boder" style="padding: 50px;">
    <h2 class="font-size4" style="margin-bottom: 30px;">会員情報編集</h2>

    <%= form_with model: @user, url: users_user_path, local: true do |f| %>
      <%= render "/layouts/error_messages", model: f.object %>

      <div class="field form-group font-size3 col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= f.label :name, "(氏名)" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control font-size3", placeholder: '氏名:', autocomplete: "name" %>
      </div>
      <div class="field form-group font-size3 col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= f.label :name_kana, "(かな)" %><br />
        <%= f.text_field :name_kana, class: "form-control font-size3", placeholder: 'ふりがな:', autocomplete: "name-kana" %>
      </div>

      <div class="field form-group font-size3 col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= f.label :postcode, "〒 郵便番号" %><br />
        <%= f.telephone_field :postcode, onKeyUp: "countLength(value);", placeholder: 'ハイフン無し:', autocomplete: "postcode", id: "postcode", class: "form-control font-size3" %>
      </div>
      <div class="field form-group address-form font-size3 col-sm-12 col-xs-12" style="margin-bottom: 20px; display: none;">
        <%= f.label :address, "続きを入力してください" %><br />(「建物名」「号室」などもご入力ください)
        <%= f.text_area :address, rows:2, class: "form-control font-size3", style: "resize: none; ", id: "address" %>
      </div>

      <div class="field form-group font-size3 col-sm-10 col-xs-10" style="margin-bottom: 20px">
        <%= f.label :telephone_number, "電話番号" %><br />
        <%= f.telephone_field :telephone_number, placeholder: '電話番号:', class: "form-control font-size3", autocomplete: "telephone_number" %>
      </div>
      <div class="field form-group font-size3 col-sm-10 col-xs-10" style="margin-bottom: 20px">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, placeholder: 'メールアドレス:', class: "form-control font-size3", autocomplete: "email" %>
      </div>

      <div class="actions form-group col-sm-3 col-xs-3" style="margin-bottom: 20px">
        <%= f.submit "変更", class: "btn btn-info font-size3" %>
      </div>
      <div class="actions form-group col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= link_to "戻る", users_user_path(@user), class: "btn btn-default font-size3" %>
      </div>
    <% end %>

    <div class="col-sm-12 col-xs-12">
      <% if card_by?(@user) %>
        <h2 class="font-size4" style="margin-bottom: 30px;">カード情報</h2>
        <table class="table font-size3">
          <tbody>
            <tr>
              <td>
                <%= @default_card_information.brand %>　**** **** **** <%= @default_card_information.last4 %>
              </td>
            </tr>
            <tr>
              <td style="border-top: none;">
                有効期限： <%= @default_card_information.exp_month %>/<%= @default_card_information.exp_year %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="row" style="margin-left: 10px;">
          <%= link_to "カード情報を削除", delete_users_user_card_index_path(@user), method: :post, class: "btn btn-danger font-size3" %>
        </div>
      <% else %>
        <h2 class="font-size4" style="margin-bottom: 30px;">カード登録</h2>
          <div class="col-sm-12 col-xs-12">
            <%= form_tag(pay_users_user_card_index_path(@user), method: :post, id: 'charge-form',  name: "inputForm") do %>
               <script type="text/javascript" src="https://checkout.pay.jp" class="payjp-button" data-key="<%= ENV["PAYJP_PUBLIC_KEY"] %>" data-text="新規カード登録" data-submit-text="カード情報を登録" ></script>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container" style="margin-top: 100px; margin-bottom: 150px; ">
  <div class="col-sm-6 col-xs-6 col-sm-offset-3 col-xs-offset-3 body-boder" style="padding: 50px;">
    <h2 class="font-size4" style="margin-bottom: 30px;">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group font-size2 col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= f.label :name, "(氏名)" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: '氏名:', autocomplete: "name" %>
      </div>
      <div class="field form-group font-size2 col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= f.label :name_kana, "(かな)" %><br />
        <%= f.text_field :name_kana, class: "form-control", placeholder: 'ふりがな:', autocomplete: "name-kana" %>
      </div>

      <div class="field form-group font-size2 col-sm-6 col-xs-6" style="margin-bottom: 20px">
        <%= f.label :postcode, "〒 郵便番号" %><br />
        <%= f.telephone_field :postcode, onKeyUp: "countLength(value);", placeholder: 'ハイフン無し:', autocomplete: "postcode", id: "postcode", class: "form-control" %>
      </div>
      <div class="field form-group address-form font-size2 col-sm-12 col-xs-12" style="margin-bottom: 20px; display: none;">
        <%= f.label :address, "続きを入力してください" %><br />(「建物名」「号室」などもご入力ください)
        <%= f.text_area :address, rows:2, class: "form-control", style: "resize: none; ", id: "address" %>
      </div>

      <div class="field form-group font-size2 col-sm-10 col-xs-10" style="margin-bottom: 20px">
        <%= f.label :telephone_number, "電話番号" %><br />
        <%= f.telephone_field :telephone_number, placeholder: '電話番号:', class: "form-control", autocomplete: "telephone_number" %>
      </div>
      <div class="field form-group font-size2 col-sm-10 col-xs-10" style="margin-bottom: 20px">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, placeholder: 'メールアドレス:', class: "form-control", autocomplete: "email" %>
      </div>

      <div class="field form-group font-size2 col-sm-9 col-xs-9" style="margin-bottom: 20px">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード6文字以上:', class: "form-control" %>
      </div>
      <div class="field form-group font-size2 col-sm-9 col-xs-9" style="margin-bottom: 30px">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '再度パスワードを入力:', class: "form-control" %>
      </div>

      <div class="actions form-group col-sm-9 col-xs-9" style="margin-bottom: 20px">
        <%= f.submit "登録", class: "btn btn-info font-size3" %>
      </div>
    <% end %>

    <div class="col-sm-12 col-xs-12">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>
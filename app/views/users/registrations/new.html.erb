<div class="col-sm-4 col-xs-4"></div>

<div class="col-sm-4" style="margin-bottom: 50px;">
  <h2 class="font-size4" style="margin-bottom: 30px;">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :name, "(氏名)" %><br />
      <%= f.text_field :name, autofocus: true, placeholder: '氏名:', autocomplete: "name" %>
    </div>
    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :name_kana, "(かな)" %><br />
      <%= f.text_field :name_kana, placeholder: 'ふりがな:', autocomplete: "name-kana" %>
    </div>
    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :postcode, "〒" %><br />
      <%= f.text_field :postcode, placeholder: 'ハイフン無し:', autocomplete: "postcode" %>
    </div>
    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address, placeholder: '住所:' %>
    </div>
    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, placeholder: 'メールアドレス:', autocomplete: "email" %>
    </div>

    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード6文字以上:' %>
    </div>

    <div class="field font-size2" style="margin-bottom: 10px">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '再度パスワードを入力:' %>
    </div>

    <div class="actions font-size2" style="margin-bottom: 20px">
      <%= f.submit "登録", class: "btn btn-info" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
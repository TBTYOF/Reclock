<div class="container">
  <div class="col-sm-3 col-xs-3"></div>

  <div class="col-sm-6 col-xs-6" style="margin-bottom: 50px;">
    <h2 class="font-size4" style="margin-bottom: 30px;">新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-sm-12 col-xs-12">
        <div class="row">
          <div class="field font-size2 col-sm-6 col-xs-6" style="margin-bottom: 15px">
            <%= f.label :name, "(氏名)" %><br />
            <%= f.text_field :name, autofocus: true, class: "col-sm-11 col-xs-11", placeholder: '氏名:', autocomplete: "name" %>
          </div>
          <div class="field font-size2 col-sm-6 col-xs-6">
            <%= f.label :name_kana, "(かな)" %><br />
            <%= f.text_field :name_kana, class: "col-sm-11 col-xs-11", placeholder: 'ふりがな:', autocomplete: "name-kana" %>
          </div>
        </div>

        <div class="row">
          <div class="field font-size2 col-sm-6 col-xs-6" style="margin-bottom: 10px">
            <%= f.label :postcode, "〒 郵便番号" %><br />
            <%= f.telephone_field :postcode, onKeyUp: "countLength(value);", placeholder: 'ハイフン無し:', autocomplete: "postcode", id: "postcode" %>
          </div>
        </div>
        <div class="row address-form" style="display: none;">
          <div class="field font-size2 col-sm-12 col-xs-12" style="margin-bottom: 15px">
            <%= f.label :address, "続きを入力してください" %><br />(「建物名」「号室」などもご入力ください)
            <%= f.text_area :address, rows:2, class: "col-sm-12 col-xs-12", style: "resize: none; ", id: "address" %>
          </div>
        </div>

        <div class="row">
          <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 10px">
            <%= f.label :telephone_number, "電話番号" %><br />
            <%= f.telephone_field :telephone_number, placeholder: '電話番号:', class: "col-sm-10 col-xs-10", autocomplete: "telephone_number" %>
          </div>
          <div class="field font-size2 col-sm-10 col-xs-10" style="margin-bottom: 15px">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, placeholder: 'メールアドレス:', class: "col-sm-10 col-xs-10", autocomplete: "email" %>
          </div>
        </div>

        <div class="row">
          <div class="field font-size2 col-sm-9 col-xs-9" style="margin-bottom: 10px">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード6文字以上:' %>
          </div>
          <div class="field font-size2 col-sm-9 col-xs-9" style="margin-bottom: 15px">
            <%= f.label :password_confirmation, "パスワード確認" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '再度パスワードを入力:' %>
          </div>

          <div class="actions col-sm-9 col-xs-9" style="margin-bottom: 20px">
            <%= f.submit "登録", class: "btn btn-info font-size2" %>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
<div class="row">
	<p class="font-size3 col-sm-6 col-xs-6"><%= @order.reviews.first.title %></p>
	<p class="font-size3 col-sm-6 col-xs-6">
		<% if @order.reviews.first.created_at == @order.reviews.first.updated_at %>
			<%= @order.reviews.first.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[@order.created_at.wday]}) %H:%M") %>
		<% else %>
			<%= @order.reviews.first.updated_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[@order.created_at.wday]}) %H:%M") %>
		<% end %>
	</p>
</div>
<div class="row">
	<p class="font-size3 col-sm-12 col-xs-12" style="word-break: break-all;">
		<%== h(@order.reviews.first.body).gsub(/\R/, "<br />") %>
	</p>
</div>

<% if defined? user %>
	<div class="row">
		<div class="actions col-sm-4 col-xs-4" style="margin-bottom: 20px">
			<%= link_to "編集する", edit_users_user_order_review_path(@user, @order, @order.reviews.first), remote: true, class: "btn btn-info font-size3" %>
		</div>
		<div class="actions col-sm-4 col-xs-4" style="margin-bottom: 20px">
			<%= link_to "削除する", users_user_order_review_path(@user, @order, @order.reviews.first), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger font-size3" %>
		</div>
	</div>
<% end %>
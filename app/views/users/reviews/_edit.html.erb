
	<h2 class="font-size4" style="margin-bottom: 20px;"><strong>レビュー編集中</strong></h4>
	<%= form_with model: @review, url: users_user_order_review_path(@user, @order, @review) do |f| %>
		<div class="row">
			<div class="field font-size3 col-sm-8 col-xs-8" style="margin-bottom: 30px">
			  <%= f.label :title, "レビュータイトル" %><br/>
			  <%= f.text_field :title, class: "col-sm-8 col-xs-8" %>
			</div>
	 </div>
		<div class="row">
			<div class="field font-size3 col-sm-12 col-xs-12" style="margin-bottom: 30px">
			  <%= f.label :body, "本文" %><br/>
			  <%= f.text_area :body, rows:10, style: "resize: none;", class: "col-sm-12 col-xs-12" %>
	 		</div>
		</div>
		<div class="actions col-sm-4 col-xs-4" style="margin-bottom: 20px">
			<%= f.submit "確定", class: "btn btn-info font-size3" %>
		</div>
		<div class="actions col-sm-4 col-xs-4" style="margin-bottom: 20px">
			<%= link_to "キャンセル", users_user_order_path(@user, @order), class: "btn btn-default font-size3" %>
		</div>
	<% end %>
